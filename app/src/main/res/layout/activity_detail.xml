<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cybrilla.shashank.liborg.DetailActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/javaconcepts_icon"
                app:siBorderWidth="3dp"
                app:siBorderColor="@color/navigationBarColor"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:transitionName="@string/transition_name_circle"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Effective Java"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/navigationBarColor"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="5dp"
                    android:transitionName="@string/transition_name_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stephaine King"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:transitionName="@string/transition_name_author"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#424242">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="24sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/success"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings:"
                android:textSize="24sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="45dp"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
