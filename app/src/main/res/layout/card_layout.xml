<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="0.5dp"
    android:layout_margin="0.1dp"
    android:clickable="true"
    android:transitionName="@string/transition_name_circle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:id="@+id/bookImage"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerInside"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookName"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/pure_black"
                android:layout_gravity="start"
                android:transitionName="@string/transition_name_name"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/authorName"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Something"
                android:textStyle="italic"
                android:textColor="@color/authorGreen"
                android:layout_gravity="start"
                android:transitionName="@string/transition_name_author"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
