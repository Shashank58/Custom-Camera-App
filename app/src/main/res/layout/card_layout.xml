<?xml version="1.0" encoding="utf-8"?>
    <!--android:clickable="true"-->
    <!--android:onClick="animateIntent"-->

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardElevation="0dp"
    android:layout_margin="0.3dp"
    android:clickable="true"
    android:onClick="animateIntent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardBackground">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:id="@+id/bookImage"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="center"
            android:transitionName="@string/transition_name_circle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/bookName"
                android:textSize="24sp"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="EFFECTIVE JAVA"
                android:layout_gravity="center_horizontal"
                android:transitionName="@string/transition_name_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/authorName"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textColor="#ff5f5f"
                android:text="Author: Stephane King"
                android:layout_gravity="center_horizontal"
                android:transitionName="@string/transition_name_author"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textColor="@color/success"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="4dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
